{
  "name": "python-wasm",
  "version": "0.20.3",
  "description": "python-wasm -- Web Assembly Python for Node.js and the Browser",
  "type": "module",
  "main": "./dist/python/node.js",
  "browser": "./dist/python/browser.js",
  "files": [
    "dist/*",
    "README.md",
    "package.json",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "make all",
    "clean": "make clean",
    "tsc": "tsc -w",
    "test": "tsc && jest --forceExit ./dist # TODO: fix this hang issue with forceExit",
    "test-watch": "jest --watch ./dist",
    "strip": "find dist/ -type f -name \"*.wasm\" | xargs -n1 wasm-strip",
    "prepublishOnly": "make clean && make OPT='-O ReleaseSmall' -j4 && npm run strip"
  },
  "jest": {
    "transform": {}
  },
  "bin": "./bin/zython",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sagemathinc/zython.git"
  },
  "keywords": [
    "python",
    "webassembly"
  ],
  "author": "William Stein <wstein@sagemath.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/sagemathinc/zython/issues"
  },
  "homepage": "https://github.com/sagemathinc/zython/tree/main/packages/python-wasm",
  "workspaces": [
    "../wasi-js",
    "../dylink",
    "../posix-node"
  ],
  "dependencies": {
    "awaiting": "^3.0.0",
    "date-format": "^4.0.13",
    "debug": "^4.3.4",
    "dylink": "^0.7.1",
    "posix-node": "^0.9.1",
    "uuid": "^8.3.2",
    "wasi-js": "^1.4.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.7.12",
    "jest": "^27.2.1",
    "typescript": "^4.7.4",
    "wabt": "^1.0.29"
  }
}
